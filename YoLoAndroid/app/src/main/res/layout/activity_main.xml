<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/cameraShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/linControl2"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/begin_camera"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="实时检测-开始"
                android:textSize="18sp" />

            <Button
                android:id="@+id/stop_camera"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="实时检测-停止"
                android:textSize="18sp" />

            <Button
                android:id="@+id/onece_camera"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="单拍"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linControl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lvContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/linControl2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="130dp"
        android:background="#66000000"
        android:divider="@android:color/white"
        android:dividerHeight="1px" />

</FrameLayout>
